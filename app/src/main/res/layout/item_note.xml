<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/name_test"
            android:layout_width="183dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@+id/button_item"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="-7dp"
            android:width="14dp"
            android:textColor="@android:color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_item"
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/adapterDate"
            android:layout_width="109dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/name_test"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="-11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_toStartOf="@+id/button_item"
            android:layout_toLeftOf="@+id/button_item"
            android:layout_toEndOf="@+id/name_test"
            android:layout_toRightOf="@+id/name_test" />

    </RelativeLayout>
</RelativeLayout>